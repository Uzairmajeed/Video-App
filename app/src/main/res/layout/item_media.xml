<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mediaItemContainer"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="@drawable/default_item_background"
    android:layout_marginBottom="8dp"
    android:padding="8dp">

    <!-- Thumbnail showing the first letter of the channel name -->
    <androidx.cardview.widget.CardView
        android:id="@+id/thumbnailView"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@android:color/darker_gray"
        app:cardCornerRadius="4dp">

        <TextView
            android:id="@+id/thumbnailTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="B"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S02 E01 - Animal Mealtime"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/channelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brave Wilderness"
            android:textColor="#CCCCCC"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:progress="50"
            android:max="100"
            android:progressDrawable="@drawable/custom_progress_drawable2"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/timeRemainingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15m left"
            android:textColor="#CCCCCC"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />
    </LinearLayout>
</LinearLayout>